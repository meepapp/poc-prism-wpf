                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Style="{DynamicResource MaterialDesignFloatingActionButton}" Background="Transparent" BorderBrush="#ef4051">
                    <Viewbox Width="48" Height="48">
