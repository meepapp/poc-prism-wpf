<Page x:Class="POC_PRISM_WPF.Views.Controls.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POC_PRISM_WPF.Views.Controls"
      mc:Ignorable="d" 
      Title="Search"
      Height="250" Width="500">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#ef4051">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="333"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image HorizontalAlignment="Right" Grid.Column="0" Source="../../Images/logo.png" Height="60" />
                <Button Grid.Column="1" Style="{DynamicResource MaterialDesignFlatButton}" Content="Fechar" Foreground="White"/>
            </Grid>
        </StackPanel>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Content="Buscando produtos..." Foreground="#ef4051" FontSize="35"/>
    </Grid>
</Page>
